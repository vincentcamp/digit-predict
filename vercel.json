{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    { "src": "api/index.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.py" },
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "src": "^/[^.]+", "dest": "index.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}