{
  "version": 2,
  "builds": [
    { 
      "src": "api/index.py", 
      "use": "@vercel/python",
      "config": { "runtime": "python3.9", "installCommand": "pip install -r requirements.txt" }
    },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.py" },
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "src": "^/[^.]+", "dest": "index.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}